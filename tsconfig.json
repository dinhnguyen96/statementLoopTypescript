{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "lib": [
            "es2021",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true
